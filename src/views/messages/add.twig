{% extends 'base.twig' %}

{% block title %} {{ 'Find your teacher'|trans }} / {{ 'Send a message'|trans }} {% endblock %}

{% block content %}
    <div class="panel panel-default dates">
        <div class="panel-heading">
            <h3 class="panel-title title">{{ 'Send'|trans }} {{ 'a message to'|trans }} : {{ recipient.login }}</h3>
        </div>
        <form action="{{ url('messages_send', {'id': recipient.id}) }}" method="post" class="panel-body add-body">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="form center-block message">
                        <div class="form-group">
                             {{ form_errors(form.title) }}
                             {{ form_label(form.title) }}
                             {{ form_widget(form.title) }}
                        </div>
                        <div class="form-group">
                             {{ form_errors(form.content) }}
                             {{ form_label(form.content) }}
                             {{ form_widget(form.content) }}
                        </div>
                </div>
                </div>
                        <div class="row col-md-12 post-view">
            <input type="submit" class="btn btn-block btn-primary message" name="submit" value="{{ 'Send'|trans }}">
            {{ form_rest(form) }}
            </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


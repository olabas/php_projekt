{% extends 'base.twig' %}

{% block title %} {{ 'Find your teacher'|trans }} / {{ 'Add an offer'|trans }} {% endblock %}

{% block content %}
        <div class="panel panel-default contain">
        <div class="panel-heading title">{{ 'Send'|trans }} {{ 'a message to'|trans }} {{ recipient.login }}!</div>
        <div class="panel-body">
            <div class="row">
        <form action="{{ path('messages_send', {'id': recipient.id }) }}" method="post" class="panel-body">
                <div class="col-md-6 col-md-offset-3">
                    <div class="form center-block">
                       
                        <div class="form-group">
                             {{ form_errors(form.title) }}
                             {{ form_label(form.title) }}
                             {{ form_widget(form.title) }}
                        </div>

                        <div class="form-group">
                             {{ form_errors(form.content) }}
                             {{ form_label(form.content) }}
                             {{ form_widget(form.content) }}
                        </div>
                    </div>
                </div>
                
                <div class="row">
            <input type="submit" class="btn btn-block btn-primary message" name="submit" value="{{ 'Send'|trans }}">
            {{ form_rest(form) }}
            </div>
        </form>
    </div>
    </div>
    </div>
{% endblock %}


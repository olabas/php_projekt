{% extends 'base.twig' %}

{% block title %} {{ 'Find your teacher'|trans }} {% endblock %}

{% block content %}
    <div class="panel panel-default contain">
        <div class="panel-heading">
            <h3 class="panel-title title">{{ 'Delete'|trans}} {{ 'message'|trans }}</h3>
        </div>
        <div class="panel-body title">
         <h4>{{ 'Are you sure you want to delete this message?'|trans }}</h4>
         <h5> {{ 'Message will be permanently deleted.'|trans }}</h5>
           <form action="{{ path('messages_delete', {'id': id }) }}" method="post">
        <a href="{{ url('messages_index') }}" class="btn btn-primary">{{ 'NO'|trans }}</a>
        <input class="btn btn-inverse" type="submit" name="submit" value="{{ 'YES'|trans }}" />
    </form>
        </div>
    </div>
{% endblock %}


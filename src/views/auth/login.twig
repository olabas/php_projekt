{% extends 'base.twig' %}

{% block title %} {{ 'Find your teacher'|trans }} / {{ 'Login panel'|trans }} {% endblock %}

{% block content %}
    <div class="panel panel-default contain">
        <div class="panel-heading">
            <h3 class="panel-title title">{{ 'Login panel'|trans }}</h3>
        </div>
        <div class="panel-body">
            <form action="{{ path('auth_login_check') }}" method="post" class="form center-block parts">
            <div class="form-group"> {{ form_widget(form) }} </div>
            <button class="btn btn-primary button">{{ 'Sign in'|trans }}</button>
             </form>
        </div>
    </div>
{% endblock %}


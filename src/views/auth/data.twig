{% extends 'base.twig' %}

{% block title %} {{ 'Find your teacher' }} / {{ 'My profile'|trans }} {% endblock %}

{% block content %}
    <div class="page-header header">
        <h1>{{ 'My profile'|trans }} <small> {{ 'My data'|trans }}</small></h1>

    </div>
    <div class="line-separator"></div>
        <div class="panel panel-default contain">
        <div class="panel-heading title">{{ 'Welcome to the User`s profile panel!'|trans }} !</div>
        <div class="panel-body">
        <img style="display: block; margin: 0 auto" src="{{ app.request.basepath }}/assets/img/profile.png" alt="Smiley face" height="250" width="250">

        <div class="user">
            <div class="col-md-12">
                <div class="jumbotron profile header">
                    <ul class="list-group">
                        <li class="list-group-item title"> <b>{{ user.login }} </b></li>
                        <li class="list-group-item"><p><b> {{ 'Name'|trans }} </b> {{ user.name }} </p></li>
                        <li class="list-group-item"><p><b> {{ 'Surname'|trans }}</b> {{ user.surname }} </p></li>
                        <li class="list-group-item"><p><b> {{ 'E-mail'|trans }} </b> {{ user.email }} </p></li>
                        <li class="list-group-item"><p><b> {{ 'Phone number'|trans }} </b> {{ user.phone_number }} </p></li>
                    </ul>
                     <a href="{{ url('users_edit', {'id': user.id})}}" class="btn btn-block btn-primary message" type="button">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            {{ 'Edit'|trans }} </a> 
                </div>
            </div>
        </div>
        </div>
{% endblock %}
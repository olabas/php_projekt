{% extends 'base.twig' %}

{% block title %} {{ 'Find your teacher'|trans }} {% endblock %}

{% block filter %}
{% endblock %}

{% block content %}
    <div class="page-header header">
        <h1> {{ 'My profile'|trans }} <small> {{ 'My offers'|trans }} </small></h1>
    </div>
    <div class="line-separator"></div>
    {% if posts|length > 0 %}
        {% for row in posts %}
            <div class="panel panel-default">
                <div class="panel-body offers">
                    <div class="row panels">
                        <div class="col-md-7">
                            <div class="jumbotron offers">
                                <p><b>{{ row.title }}</b></p>
                                <p> {{ row.content }}</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="jumbotron offers">
                                <p><b> {{ 'Added by'|trans }} {{ row.login }}</b></p>
                                <p> {{ 'Category'|trans }} {{ row.category }}</p>
                                <p> {{ 'City'|trans }} {{ row.city }}</p>
                            </div></div>
                        <div class="col-md-2">
                            <div class="jumbotron offers">
                                <p class="price">{{ row.price }} z≈Ç</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer footer">
                    <a class="btn btn-primary btn-lg button" href="{{ url('offers_view', {'id': row.id})}}" role="button">  {{ 'Learn more'|trans }} </a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-info">
            {{ 'Offers not found'|trans }}
        </div>
    {% endif %}
{% endblock %}

{% block others %}
{% endblock %}
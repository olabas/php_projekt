{% extends 'base.twig' %}

{% block title %} {{'Find your teacher'|trans }} / {{ 'Messages'|trans }} {% endblock %}

{% block filter %}
{% endblock %}

{% block content %}
     <div class="page-header header">
        <h1> {{ 'Admin panel'|trans }} <small> {{ 'Users'|trans }} </small></h1>
     </div>
     <div class="line-separator"></div>
     <div class="row">
          <div class="col-md-6">
               <a href="{{ url('index_posts') }}" class="btn btn-block btn-primary message">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                    {{ 'Zarządzaj postami'|trans }} 
               </a> 
          </div>
          <div class="col-md-6">
               <a href="{{ url('index_users') }}" class="btn btn-block btn-primary message">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                    {{ 'Zarządzaj użytkownikami'|trans }} 
               </a> <br>
          </div>
     </div>

     {% if users|length > 0 %}
          <div class="panel panel-default">
               <table class="table table-hover">
                    <tr>
                         <th>{{'Id'|trans}}</th>
                         <th>{{'Login'|trans}}</th>
                         <th>{{'Name'|trans}}</th>
                         <th>{{'Surname'|trans}}</th>
                         <th></th>
                    </tr>
                    {% for row in users %}
                         <tr>
                              <td>
                                   {{ row.id }}
                              <td>
                                   {{ row.login }}
                              </td>
                              <td>{{ row.name }}</td>
                              <td>{{ row.surname }}</td>
                              <td>   
                                   <a href="{{ url('delete_user', {'id': row.id})}}" class="btn btn-block btn-primary message">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        {{ 'Delete'|trans }}
                                   </a>
                              </td>
                         </tr>        
                    {% endfor %}
               </table>
          </div>
     {% else %}
          <div class="alert alert-info">
               {{ 'Posts not found'|trans }}
          </div>
     {% endif %}
{% endblock %}

{% block others %}
{% endblock %}
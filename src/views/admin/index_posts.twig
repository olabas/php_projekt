{% extends 'base.twig' %}

{% block title %} {{'Find your teacher'|trans }} / {{ 'Messages'|trans }} {% endblock %}

{% block filter %}
{% endblock %}

{% block content %}
     <div class="page-header header">
        <h1> {{ 'Admin panel'|trans }} <small> {{ 'Posts'|trans }} </small></h1>
     </div>
     <div class="line-separator"></div>
     <div class="row">
          <div class="col-md-6">
               <a href="{{ url('index_posts') }}" class="btn btn-block btn-primary message>
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                    {{ 'Managing posts'|trans }}
               </a> 
          </div>
          <div class="col-md-6">
               <a href="{{ url('index_users') }}" class="btn btn-block btn-primary message">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                    {{ 'Managing users'|trans }} 
               </a> <br>
          </div>
     </div>

     {% if posts|length > 0 %}
          <div class="panel panel-default">
               <table class="table table-hover">
                    <tr>
                       <th>{{'Id'|trans}}</th>
                       <th>{{'Title'|trans}}</th>
                       <th>{{'Author'|trans}}</th>
                       <th>{{'Date'|trans}}</th>
                       <th></th>
                    </tr>
                    {% for row in posts %}
                         <tr>
                              <td>
                                   {{ row.id }}
                              <td>
                                   {{ row.title }}
                              </td>
                              <td>{{ row.login }}</td>
                              <td>{{ row.post_date }}</td>
                              <td>   
                                   <a href="{{ url('delete_post', {'id': row.id})}}" class="btn btn-block btn-primary message">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        {{ 'Delete'|trans }} 
                                   </a>
                              </td>
                         </tr>        
                    {% endfor %}
               </table>
          </div>
     {% else %}
          <div class="alert alert-info">
               {{ 'Posts not found'|trans }}
          </div>
     {% endif %}
{% endblock %}

{% block others %}
{% endblock %}
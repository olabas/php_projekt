{% extends 'base.twig' %}

{% block title %}Baza Korepetycji - Ogłoszenia{% endblock %}

{% block filter %}
	<div class="btn-group filters" xmlns="http://www.w3.org/1999/html">
		<button type="button" class="btn btn-danger filter"><i class="fa fa-graduation-cap"> {{ 'Category'|trans }}</i></button>
		<button type="button" class="btn btn-danger dropdown-toggle filter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<span class="caret"></span>
			<span class="sr-only">Toggle Dropdown</span>
		</button>
		<ul class="dropdown-menu">
			{% for row in categories %}
				<li><a class="dropdown" href="#">{{ row.category }}</a></li>
				<li role="separator" class="divider"></li>
			{% endfor %}
		</ul>
	</div>

	<div class="btn-group filter">
		<button type="button" class="btn btn-danger filter"><i class="fa fa-map-marker"> {{ 'State'|trans }}</i></button>
		<button type="button" class="btn btn-danger dropdown-toggle filter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<span class="caret"></span>
			<span class="sr-only">Toggle Dropdown</span>
		</button>
        <ul class="dropdown-menu">
            {% for row in states %}
                <li><a class="dropdown" href="#">{{ row.state }}</a></li>
                <li role="separator" class="divider"></li>
            {% endfor %}
        </ul>
	</div>

	<div class="btn-group filter">
		<button type="button" class="btn btn-danger filter"><i class="fa fa-map-signs"> {{ 'City'|trans }}</i></button>
		<button type="button" class="btn btn-danger dropdown-toggle filter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<span class="caret"></span>
			<span class="sr-only">Toggle Dropdown</span>
		</button>
		<ul class="dropdown-menu">
			<li><a href="#">Action</a></li>
			<li><a href="#">Another action</a></li>
			<li><a href="#">Something else here</a></li>
			<li role="separator" class="divider"></li>
			<li><a href="#">Separated link</a></li>
		</ul>
	</div>

    <div class="btn-group filter">
	    <button type="button" class="btn btn-danger filter"><i class="fa fa-venus-mars"> {{ 'Sex'|trans}}</i>
		    <label class="checkbox-inline"><input class="checkbox" type="checkbox" value="">{{ 'F'|trans }}</label>
		    <label class="checkbox-inline"><input class="checkbox" type="checkbox" value="">{{ 'M'|trans }}</label>
    	</button>
    </div>

{% endblock %}

{% block content %}
	{% for row in posts %}
		<div class="panel panel-default">
			<div class="panel-body offers">
				<div class="row panels">
					<div class="col-md-7">
						<div class="jumbotron offers">
							<p><b>{{ row.title }}</b></p>
							<p> {{ row.content }}</p>
						</div>
					</div>
					<div class="col-md-3">
						<div class="jumbotron offers">
							<p><b >{{ 'Added by'|trans }} {{ row.login }}</b></p>
							<p> {{ 'Category'|trans }} {{ row.category }}</p>
							<p> {{ 'State'|trans }} {{ row.state }}</p>
							<p> {{ 'City'|trans }} {{ row.city }}</p>
						</div>
					</div>
					<div class="col-md-2">
						<div class="jumbotron offers">
							<p class="price">{{ row.price }} zł</p>
						</div>
					</div>
				</div>
			</div>
			<div class="panel-footer footer">
				<a class="btn btn-primary btn-lg button" href="#" role="button">{{ 'Learn more'|trans }} </a>
			</div>
		</div>
    {% endfor %}
{% endblock %}

{% block others %}
{% endblock %}

{% extends 'base.twig' %}

{% block title %}Baza Korepetycji - Ogłoszenia{% endblock %}

{% block filter %}
	{#{% for row in posts %}
	<div class="list-group">
		<a href="#" class="list-group-item active">
			<h4 class="list-group-item-heading">{{ row.title }}</h4>

{% extends 'base.twig' %}

{% block title %} {{ 'Find your teacher'|trans }} / {{ 'Add an offer'|trans }} {% endblock %}

{% block content %}
    <div class="panel panel-default contain">
        <div class="panel-heading title">
            {{ 'Update your'|trans }} {{ 'comment'|trans }}!
        </div>
        <div class="panel-body">
            <div class="row">
                <form action="{{ path('comments_edit', {'id': id }) }}" method="post" class="panel-body">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="form center-block">
                            <div class="form-group">
                                {{ form_errors(form.content) }}
                                {{ form_label(form.content) }}
                                {{ form_widget(form.content) }}
                            </div>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-block btn-primary message" name="submit" value="{{ 'Edit'|trans}}">
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}

